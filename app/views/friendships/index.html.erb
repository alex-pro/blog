<h1>List of possible friends</h1>
<% @users.each do |user| %>
  <ul class="list-group">
    <li class="list-group-item">
      <%= user.email %>
      <div class="btn-group" role="group">
        <% if friend_present(user.id) %>
          <%= link_to "Delete", friendship_path(user.id), method: :delete, class: :"btn btn-danger" %>
        <% else %>
          <%= link_to "Add Friend", friendships_path(friend_id: user.id), method: :post, class: :"btn btn-primary" %>
        <% end %>
        <%= link_to "Profile", profile_path(user.id), method: :get, class: :"btn btn-info" %>
      </div>
    </li>
  </ul>
<% end %>
