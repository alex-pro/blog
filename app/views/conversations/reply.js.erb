<% publish_to "/messages/new" do %>
  $("#chat").append('<div class="row"><div class="col-sm-9"><strong><%= User.find(@message.sender_id).email %></strong><div class="row"><div class="col-xs-8 col-sm-6"><div class="col-md-8 col-md-offset-3"><%= @message.body %></div></div><div class="col-xs-4 col-sm-6"><div class="col-md-4 col-md-offset-12"><%= @message.created_at.strftime("%D %H:%M") %></div></div></div></div></div><br>');
  $(".row .input-group .form-control").val("")
<% end %>
