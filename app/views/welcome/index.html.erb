<% if current_user %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <h3 class = "home-header">
      Logged in as <%= current_user.email %> (ID -  <%= current_user.id %>)
    </h3>
  </div>
<% else %>
  <div class="alert alert-warning alert-dismissible" role="alert">
    <h3 class = "home-header">
      You are not logged
    </h3>
  </div>
<% end %>
